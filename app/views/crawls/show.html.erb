<div class="container">
  <div class="row">
    <div class="col-4">
      <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary update-btn" data-toggle="modal" data-target="#exampleModal">
          Update Pub Crawl
        </button>
      <div class="card-results">


            <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit search</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <%= simple_form_for @newcrawl do |f| %>
                  <%= f.input :start_location %>
                  <%= f.input :end_location %>
                  <%= f.input :pub_number %>
                  <%= f.button :submit, "Update Crawl", class: "btn btn-primary modal-btn"%>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% if @key_waypoints_pubs == [nil] %>
        <h1><%= "There are not enough pubs between '" + @crawl.start_location + "' and '" + @crawl.end_location + "'. Try to look for less pubs." %></h1>
      <% elsif @key_waypoints_pubs.length < @crawl.pub_number %>
        <h1><%= "Only " + @key_waypoints_pubs.length.to_s + " pubs have been found!" %></h1>
        <% @key_waypoints_pubs.each do |marker| %>
        <div class="card-product">
          <% if marker.photos == [] %>
            <p>no photo found</p>
          <% else %>
            <img src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference=<%=marker.photos.first.photo_reference%>&key=<%=ENV['GOOGLE_PLACES_API_KEY']%>">

          <% end %>

          <div class="card-product-infos">
            <p><%= marker.name %> - <%= marker.rating %></p>
            <p> <%= marker.vicinity %> </p>
            <p> <%= marker.opening_hours %></p>
            <p> <%= marker.reviews %></p>
          </div>
        </div>
        <% end %>
      <% else %>
        <% @key_waypoints_pubs.each do |marker| %>
        <div class="card-product">
          <% if marker.photos == [] %>
            <p>no photo found</p>
          <% else %>
            <img src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=400&photoreference=<%=marker.photos.first.photo_reference%>&key=<%=ENV['GOOGLE_PLACES_API_KEY']%>">

          <% end %>

          <div class="card-product-infos">
            <p><%= marker.name %> - <%= marker.rating %></p>
            <p> <%= marker.vicinity %> </p>
            <p> <%= marker.opening_hours %></p>
            <p> <%= marker.reviews %></p>
          </div>
        </div>
        <% end %>
    </div>
    <% end %>
    <div class="col-8">
      <div
        id="map"
        style="width: 800px;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        data-response="<%= @response %>"
        data-pubmarkers="<%= @pub_markers.to_json %>"
        data-image-url="<%= @image_url.to_json %>"
      >
      </div>
  </div>

    </div>
  </div>
</div>

