<%= simple_form_for @crawl do |f| %>
  <%= f.input :start_location %>
  <%= f.input :end_location %>
  <%= f.input :pub_number %>
  <%= f.button :submit, class: "btn btn-primary"%>
<% end %>

    <% @client.spots(@crawl.start_latitude, @crawl.start_longitude, :name => 'pub', :types => 'pub', :radius => 100).each do |spot| %>
      <%= spot.lng %>
      <%= spot.lat %>
      <%= spot.name %>
      <%= spot.rating %>
    <% end %>

<h1><%= @crawl.start_location %></h1>
<h1><%= @crawl.end_location %></h1>
<h1><%= @crawl.pub_number %></h1>

<div
  id="map"
  style="width: 800px;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  data-response="<%= @response %>"
  data-pubmarkers="<%= @pub_markers.to_json %>"
>
</div>
